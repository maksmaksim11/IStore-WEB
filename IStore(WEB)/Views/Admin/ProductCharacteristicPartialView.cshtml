<script src="~/AdminPanel/js/ProductCharacteristicPartialView.js"></script>

<div class="tableBlock">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.LabelForModel("Characteristics title")
                </th>

                <th>
                    @Html.LabelForModel("Characteristics description")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="tableBox">

                <td>
                    @Html.Label("Title")
                    @Html.Editor("editor", new { htmlAttributes = new { @class = "charTitle" } })
                </td>
                <td>
                    @Html.Label("Description")
                    @Html.Editor("editor", new { htmlAttributes = new { @class = "charDescription" } })
                </td>
            </tr>
        </tbody>
    </table>
    <br>
    <button type="button" class="addCharBtn">Add сharacteristic</button>
</div>